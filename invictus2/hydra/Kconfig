source "Kconfig.zephyr"

menu "HYDRA variant selection"

choice HYDRA_VARIANT_CHOICE
    prompt "HYDRA variant"
    default HYDRA_UF
    help
      Select which HYDRA variant is used for this build.
      Exactly one variant must be selected.

config HYDRA_UF
    bool "Upper Feed"

config HYDRA_LF
    bool "Lower Feed"

config HYDRA_FS
    bool "Filling Station"

endchoice

# Optional: string alias with the chosen variant name
config HYDRA_VARIANT
    string "HYDRA (string)"
    default "upper feed" if HYDRA_UF
    default "lower feed" if HYDRA_LF
    default "filling station" if HYDRA_FS
    help
      String representation of the selected HYDRA variant, useful for logs
      or build system conditionals.

endmenu

menu "Common HYDRA configuration options"

config MODBUS_ZBUS_LISTENER_PRIO
    int "zbus priority assigned to the modbus listener callback"
    default 5

config MODBUS_WORK_Q_PRIO
    int "priority for the modbus work queue thread"
    default 5

config MODBUS_WORK_Q_STACK
    int "stack size for the modbus work q, in bytes"
    default 1024

config VALVES_ZBUS_LISTENER_PRIO
    int "zbus priority assigned to the valves listener callback"
    default 5

config VALVES_WORK_Q_PRIO
    int "priority for the valves work queue thread"
    default 5

config VALVES_WORK_Q_STACK
    int "stack size for the valves work q, in bytes"
    default 1024

endmenu
