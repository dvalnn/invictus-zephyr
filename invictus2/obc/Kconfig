mainmenu "OBC Application Options"

config LORA_REDIRECT_UART
    bool "Enable LoRa UART Shell"
    help
      This option enables a specific UART shell for interacting with the LoRa module.
      It is useful for debugging and direct control of the LoRa functions via a terminal.

config MODBUS_HYDRA_UF_SLAVE_ID
    int "Modbus slave address for the Upper Feed HYDRA"
    default 1

config MODBUS_HYDRA_UF_INPUT_ADDR_START
    int "start address for the UF HYDRA input registers"
    default 0

config MODBUS_HYDRA_UF_COILS_ADDR_START
    int "start address for the UF HYDRA coil registers"
    default 0

config MODBUS_HYDRA_LF_SLAVE_ID
    int "Modbus slave address for the Lower Feed HYDRA"
    default 2

config MODBUS_HYDRA_LF_INPUT_ADDR_START
    int "start address for the LF HYDRA input registers"
    default 0

config MODBUS_HYDRA_LF_COILS_ADDR_START
    int "start address for the LF HYDRA coil registers"
    default 0

config MODBUS_HYDRA_FS_SLAVE_ID
    int "Modbus slave address for the Rocket LIFT"
    default 3

config MODBUS_HYDRA_FS_INPUT_ADDR_START
    int "start address for the LF HYDRA input registers"
    default 0

config MODBUS_HYDRA_FS_COILS_ADDR_START
    int "start address for the LF HYDRA coil registers"
    default 0

config MODBUS_HYDRA_SAMPLE_INTERVAL_MSEC
    int "sample interval for hydra boards in milliseconds"
    default 500

config MODBUS_ROCKET_LIFT_SLAVE_ID
    int "Modbus slave address for the Rocket LIFT"
    default 4

config MODBUS_ROCKET_LIFT_INPUT_ADDR_START
    int "start address for the Rocket LIFT input registers"
    default 0

config MODBUS_ROCKET_LIFT_COILS_ADDR_START
    int "start address for the Rocket LIFT coil registers"
    default 0

config MODBUS_FS_LIFT_SLAVE_ID
    int "Modbus slave address for the Filling Station LIFT"
    default 5

config MODBUS_FS_LIFT_INPUT_ADDR_START
    int "start address for the Filling Station LIFT input registers"
    default 0

config MODBUS_FS_LIFT_COILS_ADDR_START
    int "start address for the Filling Station LIFT coil registers"
    default 0

config MODBUS_LIFT_SAMPLE_INTERVAL_MSEC
    int "sample interval for the lifts, in ms"
    default 500

config MODBUS_ZBUS_LISTENER_PRIO
    int "zbus priority assigned to the modbus listener callback"
    default 5

config MODBUS_WORK_Q_PRIO
    int "priority for the modbus work queue thread"
    default 5

config MODBUS_WORK_Q_STACK
    int "stack size for the modbus work q, in bytes"
    default 1024

config TEST_MODE
    bool "Enable test mode"
    help
      This option enables test mode for the application, used in the static tests.
      When turned off, the application will run in normal (launch) mode.
    default 1

source "Kconfig.zephyr"
